<h1>Listing time_offs</h1>

<table>
  <thead>
    <tr>
      <th>Start date</th>
      <th>End date</th>
      <th>Reason</th>
      <th>User</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @time_offs.each do |time_off| %>
      <tr>
        <td><%= time_off.start_date %></td>
        <td><%= time_off.end_date %></td>
        <td><%= time_off.reason %></td>
        <td><%= time_off.user.name %></td>
        <td><%= link_to 'Show', time_off %></td>
        <td><%= link_to 'Edit', edit_time_off_path(time_off) %></td>
        <td><%= link_to 'Destroy', time_off, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

